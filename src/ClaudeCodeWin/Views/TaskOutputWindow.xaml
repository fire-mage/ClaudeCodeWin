<Window x:Class="ClaudeCodeWin.Views.TaskOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Output"
        Width="700" Height="450"
        MinWidth="400" MinHeight="300"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock x:Name="StatusIcon" Text="&#x25B6;" FontSize="14"
                       Foreground="{StaticResource PrimaryBrush}"
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock x:Name="StatusText" Text="Running..."
                       FontSize="14" Foreground="{StaticResource TextBrush}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Output area -->
        <RichTextBox Grid.Row="1"
                     x:Name="OutputRichTextBox"
                     IsReadOnly="True"
                     Background="{StaticResource SurfaceBrush}"
                     Foreground="{StaticResource TextBrush}"
                     CaretBrush="{StaticResource TextBrush}"
                     BorderBrush="{StaticResource BorderBrush}"
                     BorderThickness="1"
                     Padding="8"
                     FontFamily="Cascadia Code,Consolas,Courier New"
                     FontSize="12"
                     VerticalScrollBarVisibility="Auto"
                     IsDocumentEnabled="True">
            <RichTextBox.Document>
                <FlowDocument>
                    <Paragraph x:Name="OutputParagraph"/>
                </FlowDocument>
            </RichTextBox.Document>
        </RichTextBox>

        <!-- Close button -->
        <Button Grid.Row="2"
                x:Name="CloseButton"
                Content="Close"
                Style="{StaticResource PrimaryButton}"
                HorizontalAlignment="Right"
                Margin="0,8,0,0"
                Padding="24,8"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
