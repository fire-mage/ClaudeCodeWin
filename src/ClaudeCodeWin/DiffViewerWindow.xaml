<Window x:Class="ClaudeCodeWin.DiffViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diff Viewer"
        Width="900" Height="600"
        MinWidth="400" MinHeight="300"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with file path and stats -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                Padding="12,8" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock x:Name="FilePathText" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock x:Name="StatsText" FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Diff content -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="DiffContent">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding Background}" Padding="0,0,8,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="18"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding LineNumber}"
                                           FontFamily="Cascadia Code,Consolas,Courier New"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextAlignment="Right"
                                           Margin="0,0,6,0"
                                           Opacity="0.6"/>
                                <TextBlock Grid.Column="1" Text="{Binding Indicator}"
                                           FontFamily="Cascadia Code,Consolas,Courier New"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="{Binding IndicatorForeground}"/>
                                <TextBlock Grid.Column="2" Text="{Binding Text}"
                                           FontFamily="Cascadia Code,Consolas,Courier New"
                                           FontSize="12"
                                           Foreground="{StaticResource TextBrush}"
                                           TextWrapping="NoWrap"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
