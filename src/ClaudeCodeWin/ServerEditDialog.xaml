<Window x:Class="ClaudeCodeWin.ServerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server"
        Width="450" Height="380"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameBox"
                 Style="{StaticResource InputTextBox}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Host" VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="HostBox"
                 Style="{StaticResource InputTextBox}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Port" VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="PortBox"
                 Style="{StaticResource InputTextBox}" Margin="0,0,0,8"
                 Text="22"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="User" VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="UserBox"
                 Style="{StaticResource InputTextBox}" Margin="0,0,0,8"
                 Text="root"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Description" VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="DescriptionBox"
                 Style="{StaticResource InputTextBox}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Projects" VerticalAlignment="Center"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="ProjectsBox"
                 Style="{StaticResource InputTextBox}" Margin="0,0,0,8"
                 ToolTip="Comma-separated project names"/>

        <TextBlock Grid.Row="6" Grid.Column="1" FontSize="11"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   Text="Projects: comma-separated (e.g. apps9, ploom-ua-bot)"
                   VerticalAlignment="Top"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Click="OkButton_Click"
                    Style="{StaticResource PrimaryButton}"
                    Padding="24,6" Margin="0,0,8,0"/>
            <Button Content="Cancel" Click="CancelButton_Click"
                    Padding="24,6"
                    Background="{StaticResource SurfaceBrush}"
                    Foreground="{StaticResource TextBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
