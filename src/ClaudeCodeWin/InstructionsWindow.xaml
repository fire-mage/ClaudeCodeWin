<Window x:Class="ClaudeCodeWin.InstructionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instructions"
        Width="720" Height="580"
        MinWidth="520" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- Tab header style -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder"
                                Padding="14,8"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush"
                                        Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="False"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter TargetName="TabBorder" Property="Background"
                                        Value="{StaticResource SurfaceLightBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="TabsControl" Grid.Row="0"
                    Background="Transparent"
                    BorderThickness="0"
                    SelectionChanged="TabsControl_SelectionChanged">

            <!-- Global CLAUDE.md -->
            <TabItem Header="Global CLAUDE.md">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Editor -->
                    <TextBox x:Name="GlobalEditor" Grid.Row="0"
                             Style="{StaticResource InputTextBox}"
                             AcceptsReturn="True" AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             TextChanged="Editor_TextChanged"
                             Margin="0,8,0,0"/>

                    <!-- Placeholder for missing file -->
                    <StackPanel x:Name="GlobalPlaceholder" Grid.Row="0"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="This file does not exist yet."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Create with Defaults"
                                    Click="CreateGlobalDefault_Click"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="16,6" Margin="0,0,8,0"/>
                            <Button Content="Create Empty"
                                    Click="CreateGlobalEmpty_Click"
                                    Padding="16,6"
                                    Background="{StaticResource SurfaceLightBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Status bar -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            Padding="8,4" Margin="0,4,0,0" CornerRadius="3">
                        <TextBlock x:Name="GlobalStatus" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button x:Name="GlobalSaveBtn" Content="Save" Click="SaveGlobal_Click"
                                Style="{StaticResource PrimaryButton}"
                                Padding="16,6" Margin="0,0,8,0" IsEnabled="False"/>
                        <Button x:Name="GlobalRevertBtn" Content="Revert" Click="RevertGlobal_Click"
                                Padding="16,6"
                                Background="{StaticResource SurfaceLightBrush}"
                                Foreground="{StaticResource TextBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Project CLAUDE.md -->
            <TabItem Header="Project CLAUDE.md">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="ProjectEditor" Grid.Row="0"
                             Style="{StaticResource InputTextBox}"
                             AcceptsReturn="True" AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             TextChanged="Editor_TextChanged"
                             Margin="0,8,0,0"/>

                    <StackPanel x:Name="ProjectPlaceholder" Grid.Row="0"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock x:Name="ProjectPlaceholderText"
                                   Text="This file does not exist yet."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <StackPanel x:Name="ProjectCreateButtons" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Create with Template"
                                    Click="CreateProjectDefault_Click"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="16,6" Margin="0,0,8,0"/>
                            <Button Content="Create Empty"
                                    Click="CreateProjectEmpty_Click"
                                    Padding="16,6"
                                    Background="{StaticResource SurfaceLightBrush}"
                                    Foreground="{StaticResource TextBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            Padding="8,4" Margin="0,4,0,0" CornerRadius="3">
                        <TextBlock x:Name="ProjectStatus" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button x:Name="ProjectSaveBtn" Content="Save" Click="SaveProject_Click"
                                Style="{StaticResource PrimaryButton}"
                                Padding="16,6" Margin="0,0,8,0" IsEnabled="False"/>
                        <Button x:Name="ProjectRevertBtn" Content="Revert" Click="RevertProject_Click"
                                Padding="16,6"
                                Background="{StaticResource SurfaceLightBrush}"
                                Foreground="{StaticResource TextBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- CCW System Instruction (read-only) -->
            <TabItem Header="CCW System">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="SystemEditor" Grid.Row="0"
                             Style="{StaticResource InputTextBox}"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             Margin="0,8,0,0"/>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            Padding="8,4" Margin="0,4,0,0" CornerRadius="3">
                        <TextBlock Text="Read-only. This is the built-in instruction that CCW sends to Claude at the start of each session."
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Memory -->
            <TabItem Header="Memory">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="MemoryEditor" Grid.Row="0"
                             Style="{StaticResource InputTextBox}"
                             AcceptsReturn="True" AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             TextChanged="Editor_TextChanged"
                             Margin="0,8,0,0"/>

                    <StackPanel x:Name="MemoryPlaceholder" Grid.Row="0"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock x:Name="MemoryPlaceholderText"
                                   Text="No memory file exists for this project."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            Padding="8,4" Margin="0,4,0,0" CornerRadius="3">
                        <TextBlock x:Name="MemoryStatus" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button x:Name="MemorySaveBtn" Content="Save" Click="SaveMemory_Click"
                                Style="{StaticResource PrimaryButton}"
                                Padding="16,6" Margin="0,0,8,0" IsEnabled="False"/>
                        <Button x:Name="MemoryRevertBtn" Content="Revert" Click="RevertMemory_Click"
                                Padding="16,6"
                                Background="{StaticResource SurfaceLightBrush}"
                                Foreground="{StaticResource TextBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom close button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Style="{StaticResource PrimaryButton}" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
